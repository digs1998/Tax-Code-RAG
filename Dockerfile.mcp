FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first (for Docker layer caching)
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY src/ ./src/
COPY data/ ./data/

# Create directory for vector store
RUN mkdir -p /app/chroma_db

# Build vector store
RUN python src/ingestion/ingest.py \
    --pdf data/usc26@119-59.pdf \
    --output /app/chroma_db

# Verify non-empty vector store
RUN ls -la /app/chroma_db && \
    test "$(ls -A /app/chroma_db)" || \
    (echo "ERROR: Vector store directory is empty" && exit 1)

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

# MCP server runs on stdio (no ports needed)
# For HTTP mode (optional), expose port 8000
EXPOSE 8000

# Health check (optional - for HTTP mode)
# HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
#   CMD curl -f http://localhost:8000/health || exit 1

# Default: Run MCP server (stdio mode)
CMD ["python", "src/main.py"]

# Alternative: Run HTTP server (uncomment if needed)
# CMD ["python", "src/http_server.py"]